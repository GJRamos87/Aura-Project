<div class="row">
  <div class="col-md-6 col-md-offset-3">
<p id="notice" class="coolBlue"><%= notice %> <%= alert %></p>

<h2 class="white">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">

    <%= f.email_field :email, autofocus: true, placeholder: 'Email Address',class: 'form-control' %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password (8 Characters Minimum)',class: 'form-control'%>
  </div>

  <div class="field top-buffer">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation' ,class: 'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class: "top-buffer btn btn-primary" %>
  </div>
<% end %>

  <div class='d-links'><%= render "devise/shared/links" %></div>

</div>
</div>
