<div class="row">
  <div class="col-md-6 col-md-offset-3">
<h2 class="white">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true,placeholder: 'Email Address',class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "top-buffer btn btn-primary" %>
  </div>
<% end %>

  <div class='d-links'><%= render "devise/shared/links" %></div>
</div>
</div>